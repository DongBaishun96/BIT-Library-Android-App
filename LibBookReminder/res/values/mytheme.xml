<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Background" parent="@android:Theme.Light">
        <item name="android:background">@color/greywhite</item>
    </style>
    
    <style name="BookNameFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#050505</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="borrowedbook" parent="@style/BookNameFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
    </style>
    <style name="DateFont" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#888888</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <color name="greywhite">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="red">#FF0000</color>
    <color name="blue">#0040C5</color>
    <color name="white">#FFFFFF</color>
    <color name="yellow">#FFFF00</color>
</resources>
